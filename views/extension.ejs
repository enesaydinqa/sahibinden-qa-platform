<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>
    <% include partials/menu %>

        <% for(var i=0; i < Object.keys(data).length; i++) { %>
            <div class="card" style="width: 15%; float: left;">
                <img class="card-img-top" src="../img/chrome-extension.jpg" width="100%" height="100%" hedialt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= data[i].name %>
                    </h5>
                    <p class="card-text">
                        <%= data[i].description %>
                    </p>
                    <a href="<%= data[i].link %>" target="_blank" class="btn btn-primary">Go Web Store</a>
                </div>
            </div>
            <% } %>

                <div class="add card" data-toggle="modal" data-target="#add-extension" style="width: 15%; float: left;">
                    <img src="../img/add-icon.png" style="width: 25%" alt="Avatar" class="image">
                    <div class="overlay">
                        <a class="icon" title="Chrome Extension">
                            <i class="fa fa-chrome" style="font-size:80%"></i>
                        </a>
                    </div>
                </div>

                <div class="modal fade" id="add-extension" tabindex="-1" aria-labelledby="chrome-extension" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="chrome-extension">Add New Chrome Extension</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">Name :</label>
                                        <input type="text" maxlength="35" class="form-control" id="name">
                                    </div>
                                    <div class="form-group">
                                        <label for="message-text" class="col-form-label">Description :</label>
                                        <input type="text" maxlength="40" class="form-control" id="description"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-link" class="col-form-label">Link :</label>
                                        <input type="text" class="form-control" id="link">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" onclick="javascript:saveExtension()">Add</button>
                            </div>
                        </div>
                    </div>
                </div>

</body>
<% include partials/script %>

</html>